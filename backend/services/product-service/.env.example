# Server
NODE_ENV=development
PORT=3002

# PostgreSQL Database
DATABASE_URL=postgresql://priceuser:pricepass@localhost:5432/price_platform

# MongoDB
MONGODB_URL=mongodb://priceuser:pricepass@localhost:27017/price_platform?authSource=admin

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Redis
